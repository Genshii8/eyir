{
  "include": ["src/**/*"],

  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "target": "ESNext",
    "module": "NodeNext",
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true
  },

  "ts-node": {
    "esm": true,
    "swc": true
  }
}
